apiVersion: v1
baseDomain: {{ base_domain }}
compute:
- name: worker
  platform:
    vsphere:
      coresPerSocket: {{ worker_cores_per_socket  }}
      cpus: {{ worker_cpus }}
      memoryMB: {{ worker_memory_mb }}
      osDisk:
        diskSizeGB: {{ worker_disk_size_gb }}
  replicas: {{ worker_replicas }}
controlPlane:
  name: master
  platform:
    vsphere:
      coresPerSocket: {{ master_cores_per_socket  }}
      cpus: {{ master_cpus }}
      memoryMB: {{ master_memory_mb }}
      osDisk:
        diskSizeGB: {{ master_disk_size_gb }}
  replicas: 3
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: {{ clustercidr }}
    hostPrefix: 23
  machineNetwork:
  - cidr: {{ machinecidr }}
  networkType: OpenShiftSDN
  serviceNetwork:
  - {{ servicecidr }}
platform:
  vsphere:
    apiVIP: {{ api_vip }}
    ingressVIP: {{ ingress_vip }}
    datacenter: {{ vsphere_datacenter }}
    cluster: {{ vsphere_cluster }}
    defaultDatastore: {{ vsphere_datastore }}
    network: {{ vsphere_network }}
    vCenter: {{ vsphere_vcenter }}
    username: {{ vsphere_username }}
    password: {{ vsphere_password }}
pullSecret: '{{ pull_secret }}'
sshKey: {{ ssh_key }}

